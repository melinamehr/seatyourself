<h1>Create User</h1>
<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.telephone_field :email %>
  </div>

  <div class='field'>
    <%= f.label :phone_number %>
    <%= f.email_field :phone_number %>
  </div>

  <div class='field'>
    <%= f.label :party_size %>
    <%= f.email_field :party_size %>
  </div>

  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit 'Sign Up' %>
<% end %>
